const mongoose = require('mongoose');
const { isEmail } = require('validator');
const bcrypt = require('bcrypt');

// password validation
const isValid = (val) => {
    const regex = /(?=.*[a-z])(?=.*[0-9])/;
    return regex.test(val);
}

// schema
const userSchema = mongoose.Schema({
    username: {
        type: String,
        required: [true, 'Username cannot be empty.'],
        maxlength: [8, 'Maximum username length is 8.'],
    },
    email: {
        type: String,
        required: [true, 'Invalid email.'],
        // unique: true,
        lowercase: [true, 'Lowercase only!'],
        validate: [isEmail, 'Please input a valid email.']
    },
    password: {
        type: String,
        required: [true, 'Invalid password'],
        minlength: [6, 'Minimum password length is 6'],
        validate: [isValid, 'Password must contain both charactors and digit.']
    }
});

// hash password
userSchema.pre('save', async function(next) {
    try {
        const salt = await bcrypt.genSalt();
        this.password = await bcrypt.hash(this.password, salt);
    } catch (err) {
        console.log(err);
    };
    next();
});


// create User
const User = mongoose.model('Users', userSchema);

// exports
module.exports = User;